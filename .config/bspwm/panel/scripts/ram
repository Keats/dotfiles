
#!/usr/bin/bash
USED_MEM=`free -m | grep Mem | awk '{print $3}'`
TOTAL_MEM=`free -m | grep Mem | awk '{print $2}'`

# Not super exact but not an issue
PERC_MEM=$((100*$USED_MEM/$TOTAL_MEM))

ICON="\ue0c5"
COLOUR_GRUV_YELLOW='#FFD79921'
COLOUR_WARNING='#FFFFC45D'
if [[ $PERC_MEM -gt 50 ]]; then
	COLOUR=$COLOUR_WARNING
else
	COLOUR=$COLOR_FOREGROUND
fi

echo -e %{F$COLOUR_GRUV_YELLOW}$ICON" "%{F$COLOUR}$PERC_MEM%{F$COLOR_FOREGROUND}
