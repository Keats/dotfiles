#
# bspwm hotkeys
#

super + alt + Escape
	bspc quit

# Close window
super + shift + q
	bspc node -c

# Kill window
super + shift + k
	bspc node -k

# balance tree (in size)
super + b
	bspc desktop -B

# toggle floating or full screen
super + {t,p,s,f}
    bspc node -t '~{tiled,pseudo_tiled,floating,fullscreen}'

# Focus the given desktop or move a window to a given desktop
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Focus next or prev window
super + {_,shift + }c
	bspc node -f {next,prev}

# Resize window
super + alt + {h,j,k,l}
	bspc node -e {@west -r -10,@south -r +10,@north -r -10,@east -r +10}

# Resize window
super + alt + shift + {h,j,k,l}
	bspc node -e {@east -r -10,@north -r +10,@south -r -10,@west -r +10}

# Presel window for splitting
super + ctrl + {Left,Down,Up,Right}
	bspc node -p {west,south,north,east}

# Circulate leaves of the tree backward or forward
super + {comma,period}
	bspc node @/ -C {backward,forward}

# Rotate leaves of tree
super + shift + {comma,period}
	bspc node @/ -R {90,270}

# Select windows or move
super + {_,shift + }{Left,Down,Up,Right}
	bspc node -{f,s} {west,south,north,east}

# Cancels a cut
super + ctrl + space
	bspc node -p cancel

# Set the split ratio
super + ctrl + {1-9}
	bspc node -r 0.{1-9}

#
# mouse bindings
#

# Move or resize window
super + button{1-3}
	bspc pointer -g {move,resize_side,resize_corner}

# Needed for ^^^^
super + !button{1-3}
	bspc pointer -t %i %i

super + @button{1-3}
	bspc pointer -u

#
# wm independent hotkeys
#

super + Return
	termite

super + space
	rofi -show run -terminal termite -lines 3 -eh 2 -width 100 -fullscreen -padding 400 -opacity "95" -bw 0 -bc "#282828" -bg "#282828" -fg "#928374" -hlbg "#282828" -hlfg "#ebdbb2"

super + shift + w
	firefox

super + shift + t
	thunar

Print
	scrot -q 100

super + l
	. ~/dotfiles/lock.sh

## Media keys
XF86AudioRaiseVolume
	amixer -q sset Master 5%+

XF86AudioLowerVolume
	amixer -q sset Master 5%-

XF86AudioMute
	amixer -q set Master toggle

# make sxhkd reload its configuration files:
super + Escape
	pkill -USR1 -x sxhkd
